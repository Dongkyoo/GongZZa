<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/speech_balloon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/speech_balloon"
        android:layout_toRightOf="@id/speech_balloon_triangle"
        android:backgroundTint="@color/colorPrimaryDark"
        android:padding="@dimen/margin2">

        <TextView
            android:id="@+id/speech_balloon_content_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="300dp"
            android:text="안농"
            android:textColor="#FFF"/>

    </FrameLayout>

    <ImageView
        android:id="@+id/speech_balloon_triangle"
        android:layout_width="6dp"
        android:layout_height="8dp"
        android:src="@drawable/triangle"
        android:tint="@color/colorPrimaryDark"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:rotation="180"/>

</RelativeLayout>